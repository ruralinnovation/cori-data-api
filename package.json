{
  "name": "cori-data-api",
  "version": "1.0.2",
  "author": "Rural Innovation Strategies, Inc",
  "description": "CORI Data API",
  "license": "ISC",
  "main": "index.js",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/ncp": "^2.0.5",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "apollo-datasource-rest": "^3.7.0",
    "apollo-server-cache-redis": "^3.3.1",
    "apollo-server-lambda": "^3.12.0",
    "aws-sdk": "^2.1164.0",
    "axios": "^0.27.2",
    "cd": "^0.3.3",
    "cdk": "^2.99.1",
    "esbuild": "^0.14.47",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.4.2",
    "ncp": "^2.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "build": "npm run build --ws",
    "build:api": "npm run build:schemas && npm run build:infra",
    "build:infra": "npm run build -w @cori-risi/infrastructure",
    "build:python-layer": "bash ./buildPythonDependencyLayer.sh",
    "build:schemas": "npm run build -w @cori-risi/graphql-schemas",
    "build:frontend": "npm run build -w @cori-risi/frontend",
    "clean": "npm run clean -w @cori-risi/graphql-schemas && npm run clean -w @cori-risi/infrastructure",
    "dev:api": "npm run build:api && npm run build:dev -w @cori-risi/graphql-schemas & npm run dev -w @cori-risi/infrastructure",
    "deploy": "npm run deploy:pipeline -w @cori-risi/infrastructure",
    "diff": "npm run diff --w packages/infrastructure",
    "synth": "npm run clean && npm run build && npm run synth:pipeline -w @cori-risi/infrastructure",
    "publish:schemas": "npm run build:schemas && npm run hive-publish -w @cori-risi/graphql-schemas",
    "lint": "eslint ./packages ./config",
    "lint:debug": "PARSER_NO_WATCH=true NODE_OPTIONS=--max-old-space-size=4096 DEBUG=* npx eslint ./packages/infrastructure",
    "lint:fix": "eslint --fix ./packages ./config",
    "format": "prettier --write ./packages ./config",
    "prep": "aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/l2v0f2h3 && docker pull public.ecr.aws/sam/build-python3.11",
    "start:api": "npm run start -w @cori-risi/infrastructure",
    "start:frontend": "npm run start -w @cori-risi/frontend",
    "test": "npm run test:integration -w @cori-risi/infrastructure",
    "test:schema": "npm run play -w @cori-risi/graphql-schemas",
    "ts": "npm run node -- -r ts-node/register"
  },
  "workspaces": [
    "packages/cori.data.api",
    "packages/frontend",
    "packages/graphql-schemas",
    "packages/infrastructure"
  ]
}
