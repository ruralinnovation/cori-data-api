{
  "name": "cori-data-api",
  "version": "1.0.0",
  "author": "Merging Futures LLC.",
  "description": "CORI Data API Project",
  "license": "ISC",
  "main": "index.js",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/ncp": "^2.0.5",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "aws-sdk": "^2.1164.0",
    "axios": "^0.27.2",
    "cd": "^0.3.3",
    "cdk": "2.20.0",
    "esbuild": "^0.14.47",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.4.2",
    "ncp": "^2.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "postinstall": "npm install -w packages/frontend --legacy-peer-deps --no-save  \"@aws-amplify/auth\"@latest \"@aws-amplify/notifications\"@latest \"@aws-amplify/ui-react\"@latest \"@emotion/react\" \"@material-ui/core\" \"@mui/material\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:schema": "npm run play -w schemas",
    "start:api": "npm run start -w infrastructure",
    "build": "npm run build --ws",
    "build:infra": "npm run build -w infrastructure",
    "build:python-layer": "bash ./buildPythonDependencyLayer.sh",
    "build:schemas": "npm run build -w schemas",
    "dev:api": "npm run build -w schemas && npm run dev -w infrastructure",
    "deploy": "npm run build && npm run deploy -w infrastructure",
    "synth": "npm run build && npm run synth -w infrastructure",
    "publish:schemas": "npm run build:schemas && npm run hive-publish -w schemas",
    "diff": "npm run diff --w packages/infrastructure",
    "ts": "npm run node -- -r ts-node/register",
    "lint": "eslint ./packages ./config",
    "lint:debug": "PARSER_NO_WATCH=true NODE_OPTIONS=--max-old-space-size=4096 DEBUG=* npx eslint ./packages/infrastructure",
    "lint:fix": "eslint --fix ./packages ./config",
    "format": "prettier --write ./packages ./config",
    "frontend:build": "npm run build -w frontend",
    "frontend:start": "npm run start -w frontend"
  },
  "workspaces": [
    "packages/frontend",
    "packages/schemas",
    "packages/infrastructure"
  ]
}
