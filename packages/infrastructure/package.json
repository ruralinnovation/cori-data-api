{
  "name": "infrastructure",
  "version": "0.0.2",
  "description": "Infrastructure code for CORI Data API",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/mergingfuturesprojects/cori-api.git"
  },
  "files": [
    "dist"
  ],
  "author": "Merging Futures LLC.",
  "homepage": "https://bitbucket.org/mergingfuturesprojects/cori-api#readme",
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^10.17.27",
    "aws-cdk": "2.20.0",
    "cross-fetch": "^3.1.5",
    "diagnose-endpoint": "^1.1.0",
    "express": "^4.18.1"
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "@aws-cdk/aws-appsync-alpha": "^2.18.0-alpha.0",
    "@aws-cdk/aws-lambda-python-alpha": "^2.20.0-alpha.0",
    "@graphql-tools/stitch": "^8.6.12",
    "@types/uuid": "^8.3.4",
    "adm-zip": "^0.5.9",
    "apollo-datasource-rest": "^3.5.3",
    "apollo-server-cache-redis": "^3.3.1",
    "apollo-server-core": "^3.8.2",
    "apollo-server-lambda": "^3.7.0",
    "apollo-server-plugin-response-cache": "^3.6.0",
    "aws-amplify": "^5.2.2",
    "aws-cdk-lib": "2.20.0",
    "compression": "^1.7.4",
    "constructs": "^10.0.0",
    "dotenv": "^16.0.1",
    "graphql": "^16.5.0",
    "graphql-compose": "^9.0.8",
    "graphql-tools": "^8.3.6",
    "ioredis": "^5.0.5",
    "nanoid": "^3.3.4",
    "nodemon": "^2.0.16",
    "pg": "^8.11.1",
    "sequelize": "^6.32.1",
    "source-map-support": "^0.5.16",
    "util": "^0.12.4",
    "uuid": "^8.3.2",
    "yaml": "^2.0.1"
  },
  "scripts": {
    "bootstrap:pipeline": "npm run cdk:pipeline -- bootstrap --cloudformation-execution-policies arn:aws:iam::aws:policy/AdministratorAccess",
    "build": "tsc && echo \"infrastructure code compiled\"",
    "build:dev": "tsc --watch",
    "cdk": "cdk",
    "cdk:start": "npm run cdk -- --app \"npx ts-node --prefer-ts-exts bin/start-api.ts\"",
    "cdk:pipeline": "npm run cdk -- --app \"npx ts-node --prefer-ts-exts bin/pipeline.ts\"",
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "deploy": "npx cdk deploy --all --require-approval never --profile mf-cori",
    "dev": "npm run build:dev & npm run cdk:start -- synth && cd cdk.out && sam-beta-cdk --debug local start-api -p 2000 -n env.json",
    "diff": "tsc && npx cdk diff --profile mf-cori",
    "build:orig": "tsc && npm run build:assets",
    "build:assets": "ts-node ./bin/prepAssets.ts",
    "synth": "tsc && npx cdk synth  --profile mf-cori",
    "synth:pipeline": "npm run cdk:pipeline -- synth --all",
    "deploy:pipeline": "npm run cdk:pipeline -- deploy --all",
    "start": "npm run build && npm run cdk:start -- synth && cd cdk.out && sam --debug local start-api -p 2000 -n env.json",
    "ts": "npm run node -- -r ts-node/register",
    "node": "node",
    "watch": "tsc -w",
    "test": "jest",
    "test-graphql": "npx ts-node test.ts",
    "test:integration": "jest ./spec/integration-test.spec.ts"
  }
}
